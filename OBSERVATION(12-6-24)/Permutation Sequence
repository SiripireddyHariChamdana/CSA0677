#include <stdio.h>
#include <stdlib.h>

void getPermutation(int n, int k, char *result) {
    int factorial[n];
    int numbers[n];
    int i, j, index;

    // Initialize the numbers array and factorial array
    for (i = 0; i < n; i++) {
        numbers[i] = i + 1;
        factorial[i] = (i == 0) ? 1 : factorial[i - 1] * i;
    }

    k--; // convert k to 0-based index

    for (i = 0; i < n; i++) {
        index = k / factorial[n - 1 - i];
        result[i] = numbers[index] + '0';
        for (j = index; j < n - 1; j++) {
            numbers[j] = numbers[j + 1];
        }
        k %= factorial[n - 1 - i];
    }

    result[n] = '\0'; // Null-terminate the string
}

int main() {
    int n = 3;
    int k = 3;
    char result[n + 1];
    getPermutation(n, k, result);
    printf("The %d-th permutation sequence is: %s\n", k, result);
    return 0;
}
